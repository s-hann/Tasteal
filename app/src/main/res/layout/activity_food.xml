        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_chef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chef's Recommendation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="30dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_chef"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <TextView
                android:id="@+id/tv_allfood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Food"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="30dp"
                android:layout_below="@+id/rv_recFood"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_allFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_allfood"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </RelativeLayout>
<!--        </LinearLayout>-->
<!--    </ScrollView>-->
</ScrollView>